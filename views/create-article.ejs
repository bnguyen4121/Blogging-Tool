<!-- Create Article Header Section -->
<header class="bg-primary text-white text-center py-5 mb-4">
    <div class="container">
        <h1 class="fw-light">Create New Article</h1>
    </div>
</header>

<!-- Create Article Content Section -->
<section class="container my-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <form action="/blog/create-article" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" required />
                </div>
                <div class="mb-3">
                    <label for="content" class="form-label">Content</label>
                    <textarea class="form-control" id="content" name="content" rows="5" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="tags" class="form-label">Tags (comma separated)</label>
                    <input type="text" class="form-control" id="tags" name="tags" />
                </div>
                <button type="submit" name="action" value="draft" class="btn btn-primary">Save as Draft</button>
                <button type="submit" name="action" value="publish" class="btn btn-success">Publish</button>
            </form>
            <a href="/blog/author-home" class="btn btn-secondary mt-3">Back to Author Home</a>
        </div>
    </div>
</section>
